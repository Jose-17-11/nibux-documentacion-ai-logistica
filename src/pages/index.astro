---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

const entry = await getEntry('documentacion', 'guia_super_agente');
const rendered = entry ? await entry.render() : null;
---

<Layout>
  <main class="min-h-screen w-full bg-slate-800 pt-8">
    <section class="max-w-[800px] p-8 bg-slate-500 text-slate-200 mx-auto rounded-lg shadow">
      {rendered ? <rendered.Content /> : <p>No se encontr√≥ el documento</p>}
    </section>
  </main>
</Layout>
